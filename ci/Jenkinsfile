pipeline {
    agent any

    stages {
        stage('Ubuntu') {
            agent {
                docker {
                    image 'alpine'
                }
            }
            steps {
                echo 'Hello World from alpine'
            }
        }
        stage('GoodBye') {
            steps {
                echo 'Good Bye'
                echo 'GoodBye 3'
            }
        }
        stage('Stage3') {
            steps {
                echo 'Good Bye'
                echo 'GoodBye 4'
            }
        }
    }
}

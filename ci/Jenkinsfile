pipeline {
    agent any
    stages {
        stage('Back-end') {
            agent {
                docker { image 'maven:3-alpine' }
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('When') {
            when {
                not {
                    branch "main"
                }
            }
            steps {
                echo 'Hola'
            }
        }
        stage('Confirmation 1') {
                steps {
                    input('Do you want to proceed?')
                }
        }
        stage('GoodBye') {
            steps {
                echo 'Good Bye'
                echo 'GoodBye 3'
            }
        }
        stage('Confirmation 2') {
                steps {
                    input('Do you want to proceed?')
                }
        }
        stage('Stage3') {
            steps {
                echo 'Good Bye'
                echo 'GoodBye 4'
            }
        }
    }
}
